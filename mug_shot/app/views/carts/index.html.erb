        <td class='columns' align='right' class='sub_total_text'><strong>sub_total</strong></td>
        <td class='columns'></td>
        <td class='columns'></td>
        <td class='columns' align="right" class='sub_total_number'><strong><%=number_to_currency(@sub_total)%></strong></td>
        <td class='columns'></td>
      </tr>
      <tr>
        <td class='columns' align='right' class='gst_text'><strong>gst</strong></td>
        <td class='columns'></td>
        <td class='columns'></td>
        <td class='columns' align="right" class='gst_text'><strong><%=number_to_currency(@gst)%></strong></td>
        <td class='columns'></td>
      </tr>
      <tr>
        <td align='right' class='total_text'><strong>total</strong></td>
        <td></td>
        <td></td>
        <td align="right" class='total_text'><strong><%=number_to_currency(@total)%></strong></td>
        <td></td>
      </tr>
    </tbody>
  </div>
</table>



