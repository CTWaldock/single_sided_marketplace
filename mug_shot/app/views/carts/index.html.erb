<h1>Your Cart</h1>

<table>
  <thead>
    <tr>
      <th>Has many</th>
      <th>Has many</th>
      <th>Qty</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.qty %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'update qty', edit_cart_path(cart) %></td>
        <td><%= link_to 'remove', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!-- Could have a link to show product - back to product detail page -->
      </tr>
    <% end %>
  </tbody>
</table>

