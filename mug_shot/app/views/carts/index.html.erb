<p id="notice"><%= notice %></p>

<i> <%= link_to '<< Back to shopping', products_path %> </i>

<h1 align="center" >Your Cart</h1>
<br>
<br>
<br>
<table class='products_table' align="center">
  <thead class='table_head' >
    <tr class='table_row'>
      <th class='columns' align="center">Name</th>
      <th class='columns' align="center">Qty</th>
      <th class='columns' align="center"></th>
      <th class='columns' align="center">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div>
    <tbody>
      <% current_user.carts.each do |cart| %>
        <tr>
          <td class='columns' align="center" ><%= cart[:name] %></td>
          <td class='columns' align="center" ><%= cart[:qty] %> </td>
          <td> <%= link_to 'update', edit_cart_path(cart) %> </td>
          <td class='columns' align="right" ><%= number_to_currency(cart[:price]) %></td>
          <td class='columns' align="right" ><%= link_to 'remove', cart, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>

