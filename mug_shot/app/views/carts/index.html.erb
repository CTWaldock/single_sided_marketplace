<p id="notice"><%= notice %></p>

<h1>Your Cart</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Qty</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.carts.each do |cart| %>
      <tr>
        <td><%= cart[:name] %></td>
        <td><%= cart[:qty] %><%= link_to 'update', edit_cart_path(cart) %></td>
        # <td><%= number_to_currency(cart[:price]) %></td>
        <td></td>
        <td><%= link_to 'remove', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!-- Could have a link to show product - back to product detail page -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<< Back to shopping', products_path %>
