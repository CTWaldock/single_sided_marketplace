<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>    
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <% if current_user.is_admin? && @user != current_user %>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

