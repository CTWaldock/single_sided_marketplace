<!DOCTYPE html>
<html>
  <head>
    <title>MugShot</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="../../assets/stylesheets/application.css">
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Mug Shot</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>

    <li class="nav-item">
       <% if user_signed_in? %>
       <a class="nav-link">
          <%= link_to("Logout", destroy_user_session_path, method: :delete) %>
       </a>
        <% else %>
       <a class="nav-link">
          <%= link_to 'Sign In', new_user_session_path, class: "nav-link active" %>
       </a>
       <% end %>
     </a>
   </li>

      <li class="nav-item">
        <a class="nav-link disabled" href="app/views/carts/index.html.erb">Cart</a>
      </li>
    </ul>
  </div>
</nav>


    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>
